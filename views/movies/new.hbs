<h1>Add New Movie</h1>

<form action="/users/{{usersId}}/catalogs/{{catalogsId}}/movies" method="POST">
  <div>
    <label for="title">Movie Title</label>
    <input type="text" name="title" placeholder="Title" />
  </div>
  <div>
    <label for="directo">Director</label>
    <input type="text" name="director" placeholder="Director" />
  </div>
  <div>
    <label for="releaseYear">Release Year</label>
    <input type="text" name="releaseYear" placeholder="Release Year" />
  </div>
  <div>
    <label for="coverImgUrl">Movie Poster URL</label>
    <input type="text" name="coverImgUrl" placeholder="Movie Poster URL" />
  </div>

  <button class="btn" type="submit">Save Movie</button>
</form>