<h1>Create New User</h1>

<form action="/users" method="POST">
  <div>
    <label for="username">Username</label>
    <input type="text" name="username" placeholder="Username" />
  </div>
  <div>
    <label for="email">E-mail</label>
    <input type="text" name="email" placeholder="E-mail" />
  </div>
  <div>
    <label for="photoUrl">User Photo URL</label>
    <input type="text" name="photoUrl" placeholder="User Photo URL" />
  </div>
  <div>
    <label for="favoriteMovieQuote">Favorite Movie Quote</label>
    <input type="text" name="favoriteMovieQuote" placeholder="Favorite Movie Quote" />
  </div>
  <button type="submit">Save Homework</button>
</form>